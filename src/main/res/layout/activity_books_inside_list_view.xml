<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/background00"
    tools:context="wreckingball.bookself.BooksInsideListView">


    <include layout="@layout/iconsbar"/>

    <android.widget.SearchView
        android:id="@+id/menu_search2"
        android:searchIcon="@drawable/searchmedium"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:hint="@string/search_hint"
        android:label="@string/search_label"
        android:layout_below="@layout/iconsbar"
        android:layout_marginTop="70dp"
        >

    </android.widget.SearchView>

    <ListView
        android:id="@+id/listView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_below="@id/menu_search2"
        >
    </ListView>


</RelativeLayout>
