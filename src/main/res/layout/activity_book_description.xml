<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:screenOrientation="portrait"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/background00"
    tools:context="wreckingball.bookself.bookDescriptionActivity">

    <include layout="@layout/iconsbar"/>

    <ImageView
        android:id="@+id/BookCover"
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:layout_centerInParent="true"
        android:src="@drawable/noimage"
        />
    <TextView
        android:id="@+id/bookTitleTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Book Title"
        android:layout_below="@id/BookCover"
        android:layout_centerInParent="true"
        />
    <TextView
        android:id="@+id/Authorstxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Authors"
        android:layout_below="@id/bookTitleTxt"
        android:layout_centerInParent="true"
        />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_below="@id/Authorstxt"
        android:scrollbars="vertical"
        android:id="@+id/scrollView1"
        >
    <TextView
        android:id="@+id/bookDescriptionTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        android:text="Description"
        />

    </ScrollView>



</RelativeLayout>
